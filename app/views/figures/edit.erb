<h2>Edits for <%= @figure.name %> </h2>

<form method="post" action="/figures/<%= @figure.id %>">
<input type="hidden" id="hidden"  name="_method" value="patch" >

<input id="figure_name" type="text"  name="figure[name]" value="<%=@figure.name%>">

<p>Select an existing landmark or create a new one below.</p>
 
 
<h3>Existing landmarks</h3>

<% @landmarks.each do |landmark| %>
   <input type="checkbox" id="<%=landmark.id%>" value="<%=landmark.id%>" name="figure[landmark.id][]" 
   <%='checked' if @figure.landmarks.include?(landmark) %>>
   <%=landmark.name%><br>
<%end%>
<br>

<p>Select an existing title or create a new one below.</p>
 
 
<h3>Existing title</h3>


<% @titles.each do |title| %>
    <input    id="title_<%= title.id %>" type="checkbox"  name="figure[title_ids][]" value="<%=title.id%>" <%='checked' if @figure.titles.include?(title) %> >
    <%= title.name %><br>
<%end%>
<br>


<h3>New landmarl</h3>
    <label>landmark Name: </label>
    <br>
    <input type="text" name="landmark[name]" id="new_landmark"></input>
    <br><br>

    <h3>New title</h3>
    <label>title Name: </label>
    <br>
    <input type="text" name="title[name]" id="new_title"></input>
    <br><br>



<input type="submit" value="Edit Figure">

</form>



 
